@model Project04_Auth_CRUD_ASP.NET.Models.ReservationModel

@{
    ViewData["Title"] = "Book a barber";
}

<div class="row justify-content-center mt-5 pt-5">
    <div class="col-7 col-md-4 p-3 auth-form main-font">
        <div>
            <a asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <form form asp-action="Create">
            <div class="text-center mb-5">
                <h4 class="text-center">Book <span class="logo-text-all">@ViewData["BarberName"]</span></h4>
            </div>
            <div class="text-danger">
                @ViewData["message"]
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control input-text" min="@System.DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceId" class="control-label">Time</label>
                <select asp-for="PriceId" class="form-control input-text" asp-items="ViewBag.PriceId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn bg-color mt-5" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
