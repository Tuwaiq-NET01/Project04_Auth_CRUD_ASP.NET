@model Project04_Auth_CRUD_ASP.NET.Models.ReservationModel

@{
    ViewData["Title"] = "Delete a reservation";
}

<div class="row justify-content-center mt-5 pt-5">
    <div class="col-7 col-md-4 p-3 auth-form main-font">
        <div>
            <a asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <h4 class="text-center mt-4">Are you sure you want to delete this?</h4>
        <div>
            <dl class="row text-center mt-5">
                <dt class="col-sm-6">
                    Barber
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Price.Barber.Name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Day)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Day)
                </dd>
                <dt class="col-sm-6">
                    Time
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Price.Time.Value)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn bg-color mt-5">Delete</button>
        </form>
    </div>
</div>
