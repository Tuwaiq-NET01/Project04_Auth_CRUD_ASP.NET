@model Project04_Auth_CRUD_ASP.NET.Models.PriceModel

<div class="row justify-content-center mt-5 pt-5">
    <div class="col-7 col-md-4 p-3 auth-form main-font">
        <div>
            <a asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <div>
            <dl class="row text-center mt-3">
                <dt class="col-sm-2">
                    Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Value)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Barber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Barber.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Time)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Time.Value)
                </dd>
            </dl>
        </div>
    </div>
</div>