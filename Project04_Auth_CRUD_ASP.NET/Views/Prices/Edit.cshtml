@model Project04_Auth_CRUD_ASP.NET.Models.PriceModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @ViewData["BarberName"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BarberId" />
            <div class="form-group">
                <label asp-for="Value" class="control-label">Price</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeId" class="control-label">Time</label>
                <select asp-for="TimeId" class="form-control" asp-items="ViewBag.TimeId"></select>
                <span asp-validation-for="TimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
