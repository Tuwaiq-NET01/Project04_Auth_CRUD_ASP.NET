@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    string bgImage = "https://images.pexels.com/photos/821736/pexels-photo-821736.jpeg?cs=srgb&dl=pexels-alex-andrews-821736.jpg&fm=jpg";
}
<style>
    .user-card {
        padding: 10px;
        margin-top: 10px;
        border: 0;
        box-shadow: 0;
    }

    input {
        padding: 8px;
        border: 0;
        border-radius: 8px;
        box-shadow: 1px 3px 8px rgba(0,0,0,0.2);
    }

    .center-form {
        box-shadow: 2px 3px 20px rgba(0,0,0,0.2);
        margin: 70px;
        border-radius: 10px;
    }

    .form-des {
        padding: 30px;
    }
</style>
<div class=" text-center ">
    <div>
        <section class="center-form row bg-light">
            <div class="col-3 rounded" style="background: url(@bgImage)center center; background-size: cover">
            </div>
            <div class="col-9  form-des">
                <h1 style="font-family: Pattaya,serif;" class="text-center">@ViewData["Title"]</h1>
                <form id="account" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="" />
                        <span asp-validation-for="Input.Email" class="text-danger" style="box-shadow: 1px 3px 8px rgba(0,0,0,0.2);"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="" style="box-shadow: 1px 3px 8px rgba(0,0,0,0.2);" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" style="padding: 0; border-radius: 0; height: 10px;"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}