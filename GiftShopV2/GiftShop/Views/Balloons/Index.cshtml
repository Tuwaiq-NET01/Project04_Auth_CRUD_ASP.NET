@{
    var Balloons = (List<BalloonModel>)ViewData["Balloons"];
    Layout = "WebLayout";

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Balloon ID:</th>
            <th scope="col">Balloon Image:</th>
            <th scope="col">Balloon Name:</th>
            <th scope="col">Balloon Price:</th>
            <th scope="col">View:</th>
            <th scope="col">Edit:</th>
            <th scope="col">Delete:</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var Balloon in Balloons)
        {
            <tr>
                <th scope="row">@Balloon.BalloonId</th>
                <td><img style="width:200px; height:200px" src="@Balloon.BalloonImage" alt="@Balloon.BalloonImage" /></td>
                <td>@Balloon.BalloonName</td>
                <td>@Balloon.BalloonPrice</td>


                <td><button type="button" class="btn btn-dark"><a style="color:white" href="/Balloons/details/@Balloon.BalloonId"> SHOW </a></button></td>
                <td><button type="button" class="btn btn-dark"><a asp-controller="Balloons" asp-action="Edit" asp-route-id="@Balloon.BalloonId">EDIT</a></button></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Balloon.BalloonId" method="post">
                        <input type="submit" value="DELETE" class="btn btn-danger" />
                    </form>
                </td>

            </tr>
        }


    </tbody>
</table>