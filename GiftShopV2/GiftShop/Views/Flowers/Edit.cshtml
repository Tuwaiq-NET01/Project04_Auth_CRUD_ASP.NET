@model FlowerModel
@{
    var Flower = (FlowerModel)ViewData["Flower"];
    Layout = "WebLayout";

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>
<center>
    <form asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group">
            <input type="hidden" asp-for="FlowerId" value="@Flower.FlowerId" />
        </div>
        <div class="form-group">
            <label asp-for="FlowerImage">Flower Image URL:</label>
            <input asp-for="FlowerImage" value="@Flower.FlowerImage" />
        </div>
        <div class="form-group">
            <label asp-for="FlowerName">Flower Name:</label>
            <input asp-for="FlowerName" value="@Flower.FlowerName" />
        </div>
        <div class="form-group">
            <label asp-for="FlowerPrice">Flower Price:</label>
            <input asp-for="FlowerPrice" value="@Flower.FlowerPrice" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
        </div>
    </form>
</center>