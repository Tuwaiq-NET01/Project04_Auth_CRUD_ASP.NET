@{
    var Flower = (FlowerModel)ViewData["Flower"];
    Layout = "WebLayout";

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>

<center>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <img style="width:200px; height:200px" src="@Flower.FlowerImage" alt="@Flower.FlowerImage" />

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Flower ID: @Flower.FlowerId</li>
            <li class="list-group-item">Flower Name: @Flower.FlowerName</li>
            <li class="list-group-item">Flower Price @Flower.FlowerPrice</li>


        </ul>
    </div>

    <a asp-controller="Flowers" asp-action="Index">Back to Flowers</a>
</center>