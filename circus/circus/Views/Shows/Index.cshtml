@{ 
    var shows = (List<ShowModel>)ViewData["shows"];
    var performers = (List<PerformerModel>)ViewData["performers"];
    var venues = (List<VenueModel>)ViewData["venues"];
    string[] month = new string[] { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };

}
    <section class="hero text-center m-auto pt-4 mb-24 mt-16 w-3/4">
        <div>
            <h1 class="text-7xl font-bold ">Shows</h1>
        </div>
        <div class="m-auto w-1/2">
            <partial name="_FerryWheelPartial" />
        </div>
    </section>
   
    <section class="w-3/4 m-auto">
        @foreach (var s in shows)
        {
            <div>
                <h3>
                    @performers.Find(x => x.Id == s.PerformerId).Name

                </h3>
                <h5>
                    @venues.Find(x => x.Id == s.VenueId).Name,  @venues.Find(x => x.Id == s.VenueId).Address
                </h5>
                <p>@s.Date.Year @month[s.Date.Month - 1], @s.Date.Day</p>
                <a href="shows/details/@s.Id">Learn more >></a>
            </div>
        }
    </section>
   
