
<h1 style="font-family:'Times New Roman', Times, serif; margin-left:100px">Edit</h1>
@{
    var Adopter = (AdopterModel)ViewData["adopter"];
}
@model AdopterModel
<div style="background: rgb(18 17 17 / 0.72); color: white;padding: 70px; font-family: 'Times New Roman', Times, serif">
    <form asp-action="Edit" method="post" asp-route-id="@Adopter.id" class="form-horizontal">

        <div class=" form-group">
            <label asp-for="id">Name</label>
            <div>
                <input asp-for="id" value="@Adopter.id" disabled />
            </div>
        </div>

        <div class=" form-group">
            <label asp-for="name">Name</label>
            <div>
                <input asp-for="name" value="@Adopter.name" />
            </div>
        </div>

        <div class=" form-group">
            <label asp-for="age">age</label>
            <div>
                <input asp-for="age" value="@Adopter.age" />
            </div>
        </div>

        <div class=" form-group">
            <label asp-for="gender">gender</label>
            <div>
                <input asp-for="gender" value="@Adopter.gender" />
            </div>
        </div>

        <div class=" form-group">
            <label asp-for="email">email</label>
            <div>
                <input asp-for="email" value="@Adopter.email" />
            </div>
        </div>

        <div class=" form-group">
            <label asp-for="phone">phone</label>
            <div>
                <input asp-for="phone" value="@Adopter.phone" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </form>
