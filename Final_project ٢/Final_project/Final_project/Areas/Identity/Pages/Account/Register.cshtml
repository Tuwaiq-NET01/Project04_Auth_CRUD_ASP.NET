@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@Html.Partial("_NavLoginAndAdminPartial")

<center>
    <h1 style="color: white; text-shadow: 5px 5px 5px #000000; ">@ViewData["Title"]</h1>
    <div class="row" style="align-content: center; padding-left: 350px; ">
        <div class="col-md-4">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div style="background-color: rgba(255, 255, 255, 0.9); box-shadow: 5px 5px 5px #000000; width: 600px; padding-top: 10px"
                         asp-validation-summary="All" class="text-danger">
                        <div class="form-group w-75">
                            <b><label style="font-size:20px; color:black" asp-for="Input.Email"></label></b>
                            <input style="text-align:center " asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group w-75">
                            <b> <label style="font-size: 20px; color: black" asp-for="Input.Password"></label></b>
                            <input style="text-align:center " asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group w-75">
                            <b><label style="font-size: 20px; color: black" asp-for="Input.ConfirmPassword"></label></b>
                            <input style="text-align:center " asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group w-75">
                            <button type="submit" class="btn btn-warning">Register</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</center>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
