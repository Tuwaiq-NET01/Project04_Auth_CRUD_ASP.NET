@model ReservationsModel
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager
@{
    var reservation = (ReservationsModel)ViewData["reservation"];
}
@Html.Partial("_NavParkingPartial")
<center>
    <div style="align-content: center;box-shadow:5px 5px #000000; text-align: center; padding-left: 200px; background-color: rgb(0,0,0,0.6); width:1000px ">

        <form asp-action="Edit" method="post" class="form-horizontal" style="margin-top:50px !important ;margin-bottom:130px !important">
            <div class="form-group w-75">
                <div>
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>

            <div class="form-group w-75">
                <label style="font-size:25px; color:white; text-shadow: 5px 5px #000000;" asp-for="Date">Date</label>
                <div>
                    <input style="text-align:center" class="form-control" asp-for="Date" value="@reservation.Date" />
                </div>
            </div>

            <div class="form-group w-75">
                <label style="font-size: 25px; color: white; text-shadow: 5px 5px #000000;" asp-for="ParkingId">Parking Id</label>
                <div>
                    <input style="text-align:center" class="form-control" asp-for="ParkingId" value="@reservation.ParkingId" />
                </div>
            </div>
            <div class="form-group w-75">
                <div class="form-group">
                    <input type="submit" class="btn btn-warning" value="Update" />
                </div>
                </div>

        </form>
        </div>
</center>