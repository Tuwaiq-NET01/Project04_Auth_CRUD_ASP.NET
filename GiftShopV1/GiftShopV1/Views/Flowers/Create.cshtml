@model FlowerModel
@{  Layout = "WebLayout"; }

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>

<form asp-action="create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="FlowerId">Flower ID:</label>
        <input asp-for="FlowerId" />
    </div>
    <div class="form-group">
        <label asp-for="FlowerImage">FlowerImage:</label>
        <input asp-for="FlowerImage" />
    </div>
    <div class="form-group">
        <label asp-for="FlowerName">Flower Name:</label>
        <input asp-for="FlowerName" />
        <span asp-validation-for="FlowerName"></span>
    </div>
    <div class="form-group">
        <label asp-for="FlowerPrice">Flower Price:</label>
        <input asp-for="FlowerPrice" />

    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>
