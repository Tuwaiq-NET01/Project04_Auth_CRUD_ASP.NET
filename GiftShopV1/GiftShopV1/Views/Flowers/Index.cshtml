@{
    var Flowers = (List<FlowerModel>)ViewData["Flowers"];
    Layout = "WebLayout"; 

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Flower ID:</th>
            <th scope="col">Flower Image:</th>
            <th scope="col">Flower Name:</th>
            <th scope="col">Flower Price:</th>
            <th scope="col">View:</th>
            <th scope="col">Edit:</th>
            <th scope="col">Delete:</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var Flower in Flowers)
        {
            <tr>
                <th scope="row">@Flower.FlowerId</th>
                <td><img style="width:200px; height:200px" src="@Flower.FlowerImage" alt="@Flower.FlowerImage" /></td>
                <td>@Flower.FlowerName</td>
                <td>@Flower.FlowerPrice</td>


                <td><button type="button" class="btn btn-dark"><a style="color:white" href="/flowers/details/@Flower.FlowerId"> SHOW </a></button></td>
                <td><button type="button" class="btn btn-dark"><a asp-controller="Flower" asp-action="Edit" asp-route-id="@Flower.FlowerId">EDIT</a></button></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Flower.FlowerId" method="post">
                        <input type="submit" value="DELETE" class="btn btn-danger" />
                    </form>
                </td>

            </tr>
        }


    </tbody>
</table>