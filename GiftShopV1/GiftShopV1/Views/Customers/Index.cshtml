@{
    var Customers = (List<CustomerModel>)ViewData["Customers"];
    Layout = "WebLayout";

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Flowers/Index">Flowers</a>
            </li>
        </ul>
    </nav>
</center>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Customer ID:</th>
            <th scope="col">First Name:</th>
            <th scope="col">Last Name:</th>
            <th scope="col">Username:</th>
            <th scope="col">Email:</th>
            <th scope="col">Phone Number:</th>
            <th scope="col">Location:</th>
            <th scope="col">View:</th>
            <th scope="col">Edit:</th>
            <th scope="col">Delete:</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var Customer in Customers)
        {
            <tr>
                <th scope="row">@Customer.CustomerId</th>
                <td>@Customer.FirstName</td>
                <td>@Customer.LastName</td>
                <td>@Customer.Username</td>
                <td>@Customer.Email</td>
                <td>@Customer.PhoneNumber</td>
                <td>@Customer.Location</td>

                <td><button type="button" class="btn btn-dark"><a style="color:white" href="/customers/details/@Customer.CustomerId"> SHOW </a></button></td>
                <td><button type="button" class="btn btn-dark"><a asp-controller="Customers" asp-action="Edit" asp-route-id="@Customer.CustomerId">EDIT</a></button></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Customer.CustomerId" method="post">
                        <input type="submit" value="DELETE" class="btn btn-danger" />
                    </form>
                </td>

            </tr>
        }


    </tbody>
</table>