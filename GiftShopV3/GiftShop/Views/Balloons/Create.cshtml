@model BalloonModel
@{ Layout = "WebLayout";
   }

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs"><i class="fa fa-fw fa-envelope"></i>Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Balloons/create">Add a Product</a>
            </li>
        </ul>
    </nav>
</center>

<center>
    <form asp-action="create" method="post" class="form-horizontal">
        <div class="form-group">
            <input type="hidden" asp-for="BalloonId" />
        </div>
        <div class="form-group">
            <label asp-for="BalloonImage">Balloon Image URL:</label>
            <input asp-for="BalloonImage" />
        </div>
        <div class="form-group">
            <label asp-for="BalloonName">Balloon Name:</label>
            <input asp-for="BalloonName" />
            <span asp-validation-for="BalloonName"></span>
        </div>
        <div class="form-group">
            <label asp-for="BalloonPrice">Balloon Price:</label>
            <input asp-for="BalloonPrice" />

        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </form>
</center>