@{
    var Sweets = (List<SweetModel>)ViewData["Sweets"];
    Layout = "WebLayout";

}

<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/ContactUs"><i class="fa fa-fw fa-envelope"></i>Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Sweets/Create">Add a Product</a>
            </li>
        </ul>
    </nav>
</center>

<div class="container">
    <div class="row">

        @foreach (var Sweet in Sweets)
        {
            <center>
                <div class="col-lg-4">
                    <div class="card" style="width:18rem;">
                        <center> <img style="min-height:200px; width:200px;" src="@Sweet.SweetImage" alt="@Sweet.SweetImage" /></center>
                        <div class="card-body">
                            <p class="card-text"><h7>Sweet ID: </h7>@Sweet.SweetId</p>
                            <p class="card-text"><h7>Sweet Name: </h7>@Sweet.SweetName</p>
                            <p class="card-text"><h7>Sweet Price: </h7>@Sweet.SweetPrice</p>
                            <button type="button" class="btn btn-dark"><a style="color:white" href="/Sweets/details/@Sweet.SweetId"> SHOW </a></button><br /><br />
                            <button type="button" class="btn btn-dark"><a asp-controller="Sweets" asp-action="Edit" asp-route-id="@Sweet.SweetId">EDIT</a></button><br /><br />
                            <form asp-action="Delete" asp-route-id="@Sweet.SweetId" method="post">
                                <input type="submit" value="DELETE" class="btn btn-danger" />
                            </form>
                        </div>

                    </div>

                </div>
            </center>
        }

    </div>
</div>
<br />
